// Get Font Config
get_font_config(config, key) {
    $custom = hexo-config('font.' + config + '.' + key);
    if $custom is a 'string' {
    	return unquote($custom);
    }
    return null;
}

// Size
font-nav-size = 1em
font-nav-size = get_font_config('nav', 'size') if get_font_config('nav', 'size')

// Font Family
// Western
